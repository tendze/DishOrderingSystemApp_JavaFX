<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="114.0" prefWidth="312.0" stylesheets="@dish_sample.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.kpo_big_dz.Controllers.PanelControllers.DishInCartController">
   <children>
      <HBox alignment="CENTER" layoutY="1.0" prefHeight="144.0" prefWidth="325.0" styleClass="dish">
         <children>
            <ImageView fitHeight="96.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/fast-food.png" />
               </image>
            </ImageView>
            <VBox alignment="CENTER" prefHeight="104.0" prefWidth="243.0" spacing="10.0">
               <children>
                  <Label fx:id="dishNameLabel" alignment="CENTER" prefHeight="21.0" prefWidth="229.0" styleClass="dish-name" text="Name" wrapText="true">
                     <effect>
                        <DropShadow color="#0000003b" />
                     </effect>
                  </Label>
                  <Label fx:id="amountLabel" styleClass="dish-info" text="Amount" />
                  <Label fx:id="priceLabel" styleClass="dish-info" text="Price" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <effect>
            <DropShadow color="#000000a7" />
         </effect>
      </HBox>
   </children>
</AnchorPane>
